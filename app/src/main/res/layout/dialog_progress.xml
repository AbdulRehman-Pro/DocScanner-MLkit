<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_progress_bg"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:tint="@color/color_secondary"
        android:layout_marginTop="@dimen/_15sdp"
        android:contentDescription="@string/content_description"
        android:src="@drawable/ic_update" />


    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:fontFamily="@font/roboto_bold"
        android:text="Downloading Update..."
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/color_text_primary"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/dialogDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:fontFamily="@font/roboto"
        android:text="Some dummy text here needs to be replaced with the actual text respective to state."
        android:layout_gravity="center_horizontal"
        android:textColor="@color/color_text_secondary"
        android:textSize="@dimen/_10sdp" />




</LinearLayout>